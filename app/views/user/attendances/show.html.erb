<h1><%= link_to @module.name, turing_module_path(@module) %></h1>
<h3><%= button_to "Retake Attendance", attendance_retake_path(@attendance), class: 's-button' %></h3>
<% if @attendance.meeting_type == "ZoomMeeting" %>
  <%= render partial: "shared/zoom_attendance_table", locals: {facade: AttendanceShowFacade.new(@attendance, updatable: true)} %>  
<% else %>
  <%= render partial: "shared/slack_attendance_table", locals: {facade: AttendanceShowFacade.new(@attendance, updatable: true)} %>  
<% end %>

