<!DOCTYPE html>
<html>
  <head>
    <title>Present</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://savile.turing.edu/css/v1/1-latest.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="s-nav s-nav-sticky">
      <a class="s-nav-icon" href="/">
        <h1 class="s-h1">Present!</h1>
      </a>
      <ul class="s-nav-menu">
        <% if current_user %>
          <li><%= link_to "All Innings", innings_path %></li>
          <li><%= link_to 'Log Out', '/sessions', method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign In With Google", "/auth/google_oauth2" %></li>
        <% end %>
      </ul>
    </nav>
    <% flash.each do |type, message| %>
      <div class=<%= type %>>
        <p><%= message %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
